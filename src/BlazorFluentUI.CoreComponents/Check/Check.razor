@namespace BlazorFluentUI
@inherits FluentUIComponentBase

<div class="root-Check">
    <div class=@($"mediumFont ms-Check{(Checked ? " is-checked" : "")}")>
        @if (UseFastIcons)
        {
            <FontIcon IconName="circle"
                      ClassName="ms-Check-circle" />
            <FontIcon IconName="checkmark"
                      ClassName="ms-Check-check" />
        }
        else
        {
            <Icon IconName="circle" UseFluentUISystemIcons=true
                  ClassName="ms-Check-circle" />
            <Icon IconName="checkmark" UseFluentUISystemIcons=true
                  ClassName="ms-Check-check" />
        }
    </div>
</div>